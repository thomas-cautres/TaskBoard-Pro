{% extends 'app/base.html.twig' %}

{% block title %}Créer un projet - TaskBoard Pro{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/create-project.css') }}">
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="project_index_complete.html">Projets</a></li>
                    <li class="breadcrumb-item active">Créer un projet</li>
                </ol>
            </nav>
            <div class="mb-4">
                <h1 class="h2 mb-2">
                    <i class="bi bi-plus-circle text-primary"></i>
                    Créer un nouveau projet
                </h1>
                <p class="text-muted mb-0">Organisez votre travail avec la méthodologie qui vous convient</p>
            </div>
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    {{ form_start(form) }}
                    <div class="mb-4">
                        {{ form_row(form.name) }}
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i>
                            Choisissez un nom unique et descriptif
                        </div>
                    </div>
                    <div class="mb-4">
                        {{ form_row(form.description) }}
                        <div class="form-text">Optionnel - Vous pourrez la modifier plus tard</div>
                    </div>

                    <!-- Type de projet -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Type de projet *</label>

                        <div class="row g-3">
                            {{ form_row(form.type) }}
                        </div>

                        <div class="alert alert-info mt-3">
                            <i class="bi bi-lightbulb"></i>
                            <strong>À savoir :</strong> Des colonnes seront automatiquement créées selon le type
                            choisi. Vous pourrez les personnaliser après la création.
                        </div>
                    </div>

                    <!-- Dates -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            {{ form_row(form.startDate) }}
                            <div class="form-text">Optionnel</div>
                        </div>

                        <div class="col-md-6">
                            {{ form_row(form.endDate) }}
                            <div class="form-text">Optionnel</div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="project_index_complete.html" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i>
                            Annuler
                        </a>

                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle"></i>
                            Créer le projet
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Informations complémentaires -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle text-primary"></i>
                        Ce qui se passera après la création
                    </h6>
                    <ul class="mb-0 small text-muted">
                        <li>Vous deviendrez automatiquement <strong>Project Manager</strong> du projet</li>
                        <li>Des colonnes par défaut seront créées selon le type choisi</li>
                        <li>Vous pourrez inviter des membres et créer des tâches immédiatement</li>
                        <li>Le type de projet ne pourra plus être modifié par la suite</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Toggle sidebar sur mobile
        document.querySelector('.navbar-toggler')?.addEventListener('click', function () {
            document.querySelector('.sidebar')?.classList.toggle('show');
        });

        // Gestion de la sélection visuelle du type de projet
        document.querySelectorAll('.project-type-card').forEach(card => {
            card.addEventListener('click', function () {
                // Retirer la classe selected de tous
                document.querySelectorAll('.project-type-card').forEach(c => c.classList.remove('selected'));
                // Ajouter à celui cliqué
                this.classList.add('selected');
                // Cocher le radio
                this.querySelector('input[type="radio"]').checked = true;
            });
        });
    </script>
{% endblock %}
