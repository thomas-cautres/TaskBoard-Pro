{% extends 'app/base.html.twig' %}

{% block title %}{{ project.name }} - TaskBoard Pro{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/show-project.css') }}">
{% endblock %}
{% block body %}
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="project_index_complete.html">My Projects</a></li>
            <li class="breadcrumb-item active">{{ project.name }}</li>
        </ol>
    </nav>

    <!-- Project Header -->
    <div class="project-header">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-start">
                <div class="project-icon scrum me-3">
                    <i class="bi bi-calendar-week"></i>
                </div>
                <div>
                    <h1 class="h2 mb-2">{{ project.name }}</h1>
                    <div class="d-flex flex-wrap gap-2 mb-3">
                            <span class="badge-role">
                                <i class="bi bi-person-fill-gear me-1"></i>
                                {% if app.user.email == project.createdByEmail %}PROJECT MANAGER{% endif %}
                            </span>
                        <span class="badge-type">
                                <i class="bi bi-calendar-week me-1"></i>
                                {{ project.type.value|upper }}
                            </span>
                        <span class="badge-status">
                                <i class="bi bi-check-circle me-1"></i>
                                {{ project.active ? 'ACTIVE': 'INACTIVE' }}
                         </span>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <a href="project_edit_complete.html" class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i>
                    Edit
                </a>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-star me-2"></i>Favorites</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>View Members</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-download me-2"></i>Export</a></li>
                        <li><a class="dropdown-item text-warning" href="#"><i class="bi bi-archive me-2"></i>Archive</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <p class="text-muted mb-3">
            {{ project.description }}
        </p>

        <div class="row g-3 text-muted small">
            <div class="col-auto">
                <i class="bi bi-calendar3 me-1"></i>
                <strong>Start:</strong> {{ project.formattedStartDate ?? 'Undefined' }}
            </div>
            <div class="col-auto">
                <i class="bi bi-calendar-check me-1"></i>
                <strong>End:</strong> {{ project.formattedEndDate ?? 'Undefined' }}
            </div>
            <div class="col-auto">
                <i class="bi bi-clock-history me-1"></i>
                <strong>Created on:</strong> {{ project.formattedCreatedAt }}
            </div>
            <div class="col-auto ms-auto">
                <i class="bi bi-people me-1"></i>
                <div class="avatar-stack d-inline-flex">
                    <div class="avatar" style="background: #4F46E5;">AM</div>
                    <span class="ms-2"><strong>1 member</strong></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card primary">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <p class="text-muted mb-1 small">Total Tasks</p>
                        <h3 class="mb-0">0</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded p-2">
                        <i class="bi bi-list-check text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card warning">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <p class="text-muted mb-1 small">In Progress</p>
                        <h3 class="mb-0">0</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 rounded p-2">
                        <i class="bi bi-hourglass-split text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card success">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <p class="text-muted mb-1 small">Completed</p>
                        <h3 class="mb-0">0</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded p-2">
                        <i class="bi bi-check-circle text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card info">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <p class="text-muted mb-1 small">Progress</p>
                        <h3 class="mb-0">0%</h3>
                    </div>
                    <div class="bg-info bg-opacity-10 rounded p-2">
                        <i class="bi bi-graph-up text-info fs-4"></i>
                    </div>
                </div>
                <div class="progress">
                    <div class="progress-bar bg-info" style="width: 0%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="card shadow-sm">
        <div class="card-header bg-white border-0">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#board" role="tab">
                        <i class="bi bi-kanban me-1"></i>
                        Board
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#" role="tab">
                        <i class="bi bi-list-ul me-1"></i>
                        Task List
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" data-bs-toggle="tab" href="#activity" role="tab">
                        <i class="bi bi-clock-history me-1"></i>
                        Activity
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#" role="tab">
                        <i class="bi bi-speedometer2 me-1"></i>
                        Sprints
                    </a>
                </li>
            </ul>
        </div>

        <div class="card-body" style="min-height: 500px;">
            <div class="tab-content">
                <!-- Board Tab -->
                <div class="tab-pane fade show active" id="board" role="tabpanel">
                    <div class="kanban-board">
                        {% for column in project.columns %}
                            <div class="kanban-column">
                                <div class="kanban-column-header">
                                    <span class="kanban-column-title">{{ column.name }}</span>
                                    <span class="kanban-column-count">0</span>
                                </div>
                                <div class="kanban-column-body">
                                    <div class="kanban-empty">
                                        <i class="bi bi-inbox"></i>
                                        <p class="small mb-0">No tasks</p>
                                    </div>
                                </div>
                                <button class="btn btn-add-task mt-2" disabled>
                                    <i class="bi bi-plus-circle me-1"></i>
                                    Add a task
                                </button>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="alert alert-info mt-4">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Next step:</strong> Start creating tasks to organize your work. Tasks can be moved
                        between columns by drag and drop.
                    </div>
                </div>

                <!-- Activity Tab -->
                <div class="tab-pane fade" id="activity" role="tabpanel">
                    <h5 class="mb-4">
                        <i class="bi bi-clock-history text-primary me-2"></i>
                        Action History
                    </h5>

                    <div class="activity-item">
                        <span class="activity-dot primary"></span>
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <strong>You</strong> created the project
                                        <span class="badge bg-success ms-1">SCRUM</span>
                                    </div>
                                    <small class="text-muted">2 hours ago</small>
                                </div>
                                <small class="text-muted">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    January 24, 2025 at 2:30 PM
                                </small>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-light">
                        <i class="bi bi-info-circle me-2"></i>
                        Future actions on this project will appear here: task creation, modifications, comments, etc.
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
