{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - {{ 'login.title'|trans }}{% endblock %}
{% block javascripts %}
    {% block importmap %}
        {{ importmap('app') }}
        {{ importmap('login') }}
    {% endblock %}
{% endblock %}
{% block body %}
    <div class="auth-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="card auth-card">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <h2 class="fw-bold"><i class="bi bi-diagram-3"></i> TaskBoard Pro</h2>
                                <p class="text-muted mt-3">{{ 'login.access_space'|trans }}</p>
                            </div>

                            {% if error %}
                                <div class="alert alert-danger" role="alert">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            <form action="{{ path('login') }}" method="post">
                                <div class="mb-3">
                                    <label class="form-label">{{ 'login.email'|trans }}</label>
                                    <input type="email" class="form-control form-control-lg"
                                           name="_username"
                                           placeholder="{{ 'login.email_placeholder'|trans }}"
                                           required
                                           autofocus>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">{{ 'login.password'|trans }}</label>
                                    <input type="password" class="form-control form-control-lg"
                                           name="_password"
                                           placeholder="{{ 'login.password_placeholder'|trans }}"
                                           required>
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me">
                                    <label class="form-check-label" for="rememberMe">{{ 'login.remember_me'|trans }}</label>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <input type="hidden" name="_target_path" value="/dashboard">

                                <button type="submit" class="btn btn-primary btn-lg w-100 mb-3" id="login-btn">
                                    {{ 'login.submit'|trans }}
                                </button>
                                <div class="text-center">
                                    <a href="#" class="text-decoration-none">{{ 'login.forgot_password'|trans }}</a>
                                </div>
                            </form>
                            <hr class="my-4">
                            <div class="text-center">
                                <p class="mb-0">
                                    {{ 'login.no_account'|trans }}
                                    <a href="{{ path('registration') }}" class="text-decoration-none fw-bold">
                                        {{ 'login.signup_link'|trans }}
                                    </a>
                                </p>
                            </div>
                            <div class="text-center mt-3">
                                <a href="{{ path('home') }}" class="text-decoration-none">
                                    <i class="bi bi-arrow-left"></i> {{ 'login.back_to_home'|trans }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
