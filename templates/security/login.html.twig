{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
        <div class="card shadow-lg border-0" style="width: 26rem;">
            <div class="card-body p-4">
                <h2 class="text-center mb-4">{{ 'Login'|trans }}</h2>
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message|trans }}
                    </div>
                {% endfor %}
                <form action="{{ path('login') }}" method="post">
                    <div class="mb-3">
                        <label for="username">{{ 'Email address'|trans }}</label>
                        <input type="text" id="username" name="_username" required class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="password">{{ 'Password'|trans }}</label>
                        <input type="password" id="password" name="_password" required class="form-control">
                    </div>
                    <input type="hidden" name="_target_path" value="/">
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg" id="login-btn">
                            {{ 'Login'|trans }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock body %}
