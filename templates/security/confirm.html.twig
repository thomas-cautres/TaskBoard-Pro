{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'otp.title'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/login.css') }}">
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
        <div class="card shadow-lg border-0" style="width: 28rem;">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <i class="bi bi-shield-check text-primary" style="font-size: 64px;"></i>
                    </div>
                    <h2 class="fw-bold mb-3">{{ 'otp.heading'|trans }}</h2>
                    <p class="text-muted">{{ 'otp.description'|trans }}</p>
                </div>
                {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_row(form.confirmationCode) }}
                    <small class="text-muted d-block mt-2">{{ 'otp.code_help'|trans }}</small>
                </div>
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg" id="confirm-btn">
                        {{ 'otp.verify_button'|trans }}
                    </button>
                </div>
                {{ form_end(form) }}
                <hr class="my-4">
                <div class="text-center mt-3">
                    <a href="{{ path('login') }}" class="text-decoration-none text-muted">
                        <i class="bi bi-arrow-left"></i> {{ 'otp.back_to_login'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}
