{% block project_type_row %}
    {% set is_disabled = form.vars.disabled %}

    {% if is_disabled %}
        <div class="alert alert-info d-flex align-items-center mb-3" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            <div>
                {{ 'project.edit.type_locked'|trans }}
            </div>
        </div>
    {% endif %}

    {% for type in form.children %}
        {% set attrs = type.vars.attr %}
        {% set is_selected = type.vars.data is same as(true) %}

        <div class="col-md-4">
            <label
                data-action="{% if not is_disabled %}click->project#selectType{% endif %}"
                data-project-target="projectCard"
                class="project-type-card card h-100 p-3 {% if is_selected %}selected{% endif %} {% if is_disabled %}disabled opacity-75{% endif %}"
                style="{% if is_disabled %}cursor: not-allowed;{% endif %}"
            >
                <input
                    type="radio"
                    name="{{ type.vars.full_name }}"
                    value="{{ type.vars.value }}"
                    id="{{ type.vars.id }}"
                    {% if is_selected %}checked{% endif %}
                    {% if is_disabled %}disabled{% endif %}
                >
                <div class="d-flex align-items-start">
                    <i class="bi {{ attrs['data-icon'] }} fs-2 {{ attrs['data-icon-color'] }} me-2"></i>
                    <div>
                        <h6 class="mb-1">{{ attrs['data-emoji'] }} {{ type.vars.value|upper }}</h6>
                        <small class="text-muted">
                            {{ attrs['data-description']|trans }}
                        </small>
                    </div>
                </div>
            </label>
        </div>
    {% endfor %}

    {{ form_errors(form) }}
{% endblock %}
